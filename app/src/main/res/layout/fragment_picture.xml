<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".ui.fragments.PictureFragment">

    <ImageView
        android:id="@+id/pictureDetailPhoto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pictureDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pictureDetailPhoto"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/pictureDetailArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pictureDetailName"
        app:layout_constraintTop_toBottomOf="@+id/pictureDetailName"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/pictureDetailSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pictureDetailArtistName"
        app:layout_constraintTop_toBottomOf="@+id/pictureDetailArtistName"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/pictureDetailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pictureDetailSize"
        app:layout_constraintTop_toBottomOf="@+id/pictureDetailSize"
        app:layout_constraintVertical_bias="0.06" />

    <Button
        android:id="@+id/buttonBuy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="@string/buy"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pictureDetailArtistName"
        app:layout_constraintEnd_toEndOf="@+id/pictureDetailPhoto"
        app:layout_constraintTop_toBottomOf="@+id/pictureDetailPhoto"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.3" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="@string/back"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonBuy"
        app:layout_constraintTop_toBottomOf="@+id/buttonBuy"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintWidth_percent="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>